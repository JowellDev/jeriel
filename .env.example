# DATABASE
# For Docker Compose: use service name (e.g., jeriel-db)
# For local development: use localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jeriel
DB_USER=postgres
DB_PASSWORD=postgres

DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# AUTH
# Generate a random string with: openssl rand -hex 16
ARGON_SECRET_KEY=
SUPER_ADMIN_EMAIL=
SUPER_ADMIN_PASSWORD=

# SESSION
# Generate a random string with: openssl rand -hex 32
# Can be a comma-separated list of secrets for key rotation
COOKIE_SECRETS=

# SMTP
# For local development with MailPit:
# - SMTP: localhost:1025
# - Web UI: http://localhost:8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@jeriel.app
SMTP_FROM_NAME="Jeriel"

# SMS (Letexto API)
MESSAGE_SENDER_ID=JOWELL
LETEXTO_API_URL=https://apis.letexto.com/v1/messages/send
LETEXTO_API_TOKEN=

# MINIO (S3-compatible object storage)
# Generate access key and secret key from MinIO console
MINIO_URL=http://localhost:9000
MINIO_HOST=localhost
MINIO_BUCKET=jeriel
MINIO_PORT=9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# REDIS (for BullMQ - future migration)
REDIS_HOST=localhost
REDIS_PORT=6379

# QUIRREL (Background Jobs - current)
QUIRREL_TOKEN=
QUIRREL_BASE_URL=http://localhost:3000

# CRON SCHEDULES
# Pattern for checking attendance conflicts (cron expression)
CHECK_CONFLICT_PATTERN='*/1 * * * *'

# Attendance conflict check schedule (Monday-Saturday at 8 AM)
CHECK_ATTENDANCE_CONFLICT_CRON="0 8 * * 1-6"

# Report tracking schedule (Monday-Saturday at 8 AM)
REPORT_TRACKING_CRON="0 8 * * 1-6"

# Birthday notification schedule (daily at 8 AM)
BIRTHDAYS_CRON="0 8 * * *"

# FEATURES
# Set to true to enable cleanup of old tracking entries (older than 6 months)
ENABLE_TRACKING_CLEANUP=true